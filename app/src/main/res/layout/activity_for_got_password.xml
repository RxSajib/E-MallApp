<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForGotPasswordActivity">


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/AppLogo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/emapp_icon">
                </ImageView>

                <TextView
                    android:id="@+id/FPasswordText"
                    android:layout_below="@+id/AppLogo"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:fontFamily="serif-monospace"
                    android:text="ForGot Password"
                    android:textColor="#038C73"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/FPasswordText"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:fontFamily="serif-monospace"
                    android:textColor="#038C73"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Forgot password just input your email account and check your account"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/ForgotEmailID"
                    android:padding="10dp"
                    android:layout_marginRight="25dp"
                    android:drawableLeft="@drawable/email_icon"
                    android:layout_marginTop="20dp"
                    android:hint="Enter Your Email"
                    android:singleLine="true"
                    android:background="@drawable/edittext_design"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_below="@+id/ForgotEmailID"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">


                    <ImageView
                        android:id="@+id/SendMessageID"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                    </ImageView>



                    <TextView
                        android:layout_toRightOf="@+id/SendMessageID"
                        android:id="@+id/MessageTextID"
                        android:textSize="15dp"
                        android:fontFamily="serif-monospace"
                        android:textColor="#038C73"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                    <ImageView
                        android:id="@+id/ProgressImageID"
                        android:src="@drawable/emailicon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                    </ImageView>

                    <ProgressBar
                        android:id="@+id/ProgressBarID"
                        android:layout_below="@+id/ProgressImageID"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@android:color/holo_red_light"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                </RelativeLayout>


                <Button
                    android:id="@+id/ResetPasswordButtonID"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/login_button_design"
                    android:textColor="@android:color/white"
                    android:text="ForGot Password"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>


            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>



</RelativeLayout>